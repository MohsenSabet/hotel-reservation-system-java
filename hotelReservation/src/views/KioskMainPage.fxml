<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane stylesheets="@../application/KioskStyles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.KioskMainPageController">
    <center>
        <StackPane fx:id="contentPane">
            <children>
                <Button fx:id="startButton" onAction="#handleBookRoom" prefHeight="108.0" prefWidth="114.0" styleClass="submit-button" text="Start Here" />
            </children>
        </StackPane>
    </center>
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10.0" BorderPane.alignment="TOP_RIGHT">
            <children>
                <Button fx:id="backButton" onAction="#handleBack" styleClass="cancel-button" text="X" />
            </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
        </HBox>
    </top>
</BorderPane>
